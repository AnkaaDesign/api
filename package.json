{
  "name": "ankaa-api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean && npm run generate-build-info",
    "build": "nest build",
    "postbuild": "npm run copy-assets && npm run setup-runtime-paths && npm run copy-build-info",
    "copy-assets": "cp -r src/templates dist/ 2>/dev/null || true",
    "setup-runtime-paths": "node scripts/setup-module-alias.js",
    "generate-build-info": "node scripts/generate-build-info.js",
    "copy-build-info": "cp src/build-info.json dist/ 2>/dev/null || cp src/build-info.json dist/src/ 2>/dev/null || true",
    "start": "node -r ./scripts/module-alias-setup.js dist/main.js",
    "start:prod": "NODE_ENV=production node -r ./scripts/module-alias-setup.js dist/main.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --respawn src/main.ts",
    "debug": "nest start --debug --watch",
    "clean": "rm -rf dist",
    "seed": "tsx seed-database.ts",
    "lint": "eslint '{src,apps,libs}/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "ci:build": "npm run lint && npm run build",
    "docker:build": "docker build -t ankaa-api .",
    "docker:run": "docker run -p 3030:3030 --env-file .env ankaa-api",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "deploy:prod": "./scripts/deploy-production.sh",
    "backup:db": "./scripts/backup-database.sh",
    "rollback": "./scripts/rollback.sh",
    "smoke:test": "./scripts/smoke-tests.sh",
    "dev:reset": "rm -rf dist && rm -rf uploads && mkdir -p uploads",
    "dev:fresh": "npm run dev:reset && npm run seed",
    "dev:watch": "ts-node-dev -r tsconfig-paths/register --transpile-only --respawn --notify src/main.ts",
    "seed:demo": "tsx seed-database.ts --demo-data",
    "seed:minimal": "tsx seed-database.ts --minimal"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^11.0.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^11.1.2",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.8.2",
    "@types/bull": "^4.10.4",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/helmet": "^4.0.0",
    "axios": "^1.8.4",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "colorjs.io": "^0.5.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "firebase": "^11.8.1",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "module-alias": "^2.2.3",
    "multer": "^2.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-thumbnail": "^1.0.6",
    "pdfkit": "^0.15.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.5",
    "simple-git": "^3.28.0",
    "twilio": "^5.7.3",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.17",
    "@types/pdfkit": "^0.13.6",
    "@types/twilio": "^3.19.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ioredis": "^5.6.1",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@": "./dist",
    "@modules": "./dist/modules",
    "@constants": "./dist/constants",
    "@types": "./dist/types",
    "@utils": "./dist/utils",
    "@schemas": "./dist/schemas",
    "@common": "./dist/common",
    "@config": "./dist/config",
    "@decorators": "./dist/common/decorators",
    "@auth-decorators": "./dist/modules/common/auth/decorators",
    "@guards": "./dist/modules/common/auth/guards",
    "@middleware": "./dist/common/middleware",
    "@templates": "./dist/templates",
    "@domain": "./dist/modules/domain",
    "@inventory": "./dist/modules/inventory",
    "@production": "./dist/modules/production",
    "@people": "./dist/modules/people",
    "@paint": "./dist/modules/paint",
    "@system": "./dist/modules/system",
    "@integrations": "./dist/modules/integrations",
    "@human-resources": "./dist/modules/human-resources"
  }
}