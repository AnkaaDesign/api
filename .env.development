# API Environment Variables - DEVELOPMENT
# This file contains development-specific configuration

# ==============================================
# REQUIRED VARIABLES
# ==============================================

# Environment
NODE_ENV="development"

# Server Configuration
PORT=3030

# Database (REQUIRED)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# JWT Authentication (REQUIRED - must be at least 32 characters)
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-long-change-this-in-production"
JWT_EXPIRATION="7d"

# ==============================================
# OPTIONAL VARIABLES
# ==============================================

# API Configuration
API_PREFIX="/api"
API_VERSION="v1"
API_URL="http://localhost:3030"
API_BASE_URL="http://localhost:3030"

# Client/CORS Configuration
CLIENT_HOST="http://localhost:5173"
CORS_ORIGINS="http://localhost:5173,http://localhost:5174"

# File Upload - Development uses local uploads directory
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=524288000
MAX_UPLOAD_FILES=10000
MAX_UPLOAD_SIZE_MB=10000
ALLOWED_FILE_TYPES="image/*,application/pdf,application/msword"
FILE_URL_PREFIX="/files"

# WebDAV Configuration - Development Mode
# In development, files are stored locally in ./uploads/webdav
# Comment out WEBDAV_ROOT to use local storage, or set it to a local path
USE_WEBDAV="true"
# WEBDAV_ROOT="/srv/webdav"  # Comment this out for local development
WEBDAV_BASE_URL="http://localhost:3030"

# Redis Cache (Optional - disable in development if not needed)
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD=""
# REDIS_DB=0

# Rate Limiting - Disabled in development for easier testing
DISABLE_RATE_LIMITING="true"

# Logging - More verbose in development
LOG_LEVEL="debug"
LOG_DIR="./logs"
LOG_FORMAT="json"
ENABLE_CONSOLE_LOGS="true"
ENABLE_FILE_LOGS="false"

# Security - Relaxed for development
CSP_REPORT_URI="/api/security/csp-report"
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS="false"
HSTS_PRELOAD="false"
SESSION_MAX_AGE=86400000

# Health Check & Metrics
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS="false"
METRICS_ENDPOINT="/metrics"

# ==============================================
# EXTERNAL SERVICES (All Optional)
# ==============================================

# Twilio SMS Service (Optional - can be disabled in dev)
# TWILIO_ACCOUNT_SID=""
# TWILIO_AUTH_TOKEN=""
# TWILIO_SERVICE_SID=""
# TWILIO_PHONE_NUMBER=""

# Email Service (Optional - can be disabled in dev)
# EMAIL_HOST=""
# EMAIL_PORT=587
# EMAIL_SECURE="false"
# EMAIL_USER=""
# EMAIL_PASS=""

# Firebase (Optional)
# FIREBASE_PROJECT_ID=""
# FIREBASE_STORAGE_BUCKET=""

# Secullum Integration - Use mock in development
SECULLUM_BASE_URL="https://pontoweb.secullum.com.br"
SECULLUM_EMAIL=""
SECULLUM_PASSWORD=""
SECULLUM_DATABASE_ID="4c8681f2e79a4b7ab58cc94503106736"
SECULLUM_CLIENT_ID="3"
SECULLUM_CLIENT_SECRET=""
USE_MOCK_SECULLUM="true"
