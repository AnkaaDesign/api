{{#*inline "content"}}
  {{#if importance}}
  <div style="padding: 15px; border-left: 4px solid
    {{#eq importance 'URGENT'}}#dc3545{{/eq}}
    {{#eq importance 'HIGH'}}#fd7e14{{/eq}}
    {{#eq importance 'MEDIUM'}}#ffc107{{/eq}}
    {{#eq importance 'LOW'}}#16802B{{/eq}};
    background-color: #f8f9fa; margin-bottom: 20px; border-radius: 4px;">
    <strong style="color:
      {{#eq importance 'URGENT'}}#721c24{{/eq}}
      {{#eq importance 'HIGH'}}#856404{{/eq}}
      {{#eq importance 'MEDIUM'}}#856404{{/eq}}
      {{#eq importance 'LOW'}}#155724{{/eq}};">
      {{#eq importance 'URGENT'}}URGENTE{{/eq}}
      {{#eq importance 'HIGH'}}ALTA PRIORIDADE{{/eq}}
      {{#eq importance 'MEDIUM'}}MÉDIA PRIORIDADE{{/eq}}
      {{#eq importance 'LOW'}}BAIXA PRIORIDADE{{/eq}}
    </strong>
  </div>
  {{/if}}

  {{#if userName}}
  <h2>Olá, {{userName}}</h2>
  {{/if}}

  {{#if title}}
  <h2>{{title}}</h2>
  {{/if}}

  {{#if timestamp}}
  <p style="font-size: 13px; color: #6c757d; margin-bottom: 20px;">
    {{formatDate timestamp "datetime"}}
  </p>
  {{/if}}

  {{#if body}}
  <div style="margin: 20px 0; line-height: 1.8; white-space: pre-wrap;">
    {{body}}
  </div>
  {{/if}}

  {{#if actionUrl}}
  {{> button url=actionUrl text=(default actionText "Ver Detalhes")}}
  {{/if}}

  {{#if metadata}}
  <div style="background: #f8f9fa; border: 1px solid #dee2e6; border-radius: 5px; padding: 20px; margin: 25px 0;">
    <strong style="color: #495057;">Informações Adicionais:</strong>
    <ul style="margin: 15px 0 0 0; padding-left: 20px; color: #495057;">
      {{#each metadata}}
      <li style="margin: 8px 0;">
        <strong>{{@key}}:</strong> {{this}}
      </li>
      {{/each}}
    </ul>
  </div>
  {{/if}}
{{/inline}}

{{> ../layouts/main}}
