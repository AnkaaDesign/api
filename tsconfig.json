{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": false,
    "incremental": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["./src/modules/*"],
      "@constants": ["./src/constants/index"],
      "@constants/*": ["./src/constants/*"],
      "@types": ["./src/types/index"],
      "@types/*": ["./src/types/*"],
      "@utils": ["./src/utils/index"],
      "@utils/*": ["./src/utils/*"],
      "@schemas": ["./src/schemas/index"],
      "@schemas/*": ["./src/schemas/*"],
      "@common/*": ["./src/common/*"],
      "@config/*": ["./src/config/*"],
      "@decorators": ["./src/common/decorators/index"],
      "@decorators/*": ["./src/common/decorators/*"],
      "@auth-decorators/*": ["./src/modules/common/auth/decorators/*"],
      "@guards/*": ["./src/modules/common/auth/guards/*"],
      "@middleware/*": ["./src/common/middleware/*"],
      "@templates/*": ["./src/templates/*"],
      "@domain/*": ["./src/modules/domain/*"],
      "@inventory/*": ["./src/modules/inventory/*"],
      "@production/*": ["./src/modules/production/*"],
      "@people/*": ["./src/modules/people/*"],
      "@paint/*": ["./src/modules/paint/*"],
      "@system/*": ["./src/modules/system/*"],
      "@integrations/*": ["./src/modules/integrations/*"],
      "@human-resources/*": ["./src/modules/human-resources/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["dist", "node_modules"]
}
